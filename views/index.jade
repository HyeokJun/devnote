extends layout

block content
  h1= title
  p= __('Welcome to %s', title)

  h2= __('Note')
  a(href='/wikis/#{wikiName}/pages/frontpage') frontpage
  p
  a(href='/wikis/#{wikiName}/new')= __('New note')
  p
  a(href='/wikis/#{wikiName}/pages')= __('Note list')
  p
  a(href='/wikis/#{wikiName}/pages?action=search')= __('Search notes')
  p
  a(href='/wikis/#{wikiName}/pages/today/attachment') file attachment at page name 'today'
  p
  h2= __('User')
  p
  a(href='/wikis/#{wikiName}/users?action=login')= __('Login')
  p
  a(href='/wikis/#{wikiName}/users')= __('User list')
  p
  a(href='/wikis/#{wikiName}/users/new')= __('New user')
  p
  h2= __('Administration')
  p
  a(href='/admin/mailconf')= __('Configure mail')
  p
  a(href='/admin/mail')= __('Send mail')
  p
  span hello#{' '}
  a(href='aa') hoho
  span
    | world
