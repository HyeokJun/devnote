extends ../layout

block content
    h1= title
    form(method="post", action="/wikis/note/users/login")
        label(for="id")= __('ID')
        input(name="id", id="id")
        label(for="password")= __('Password')
        input(name="password", id="password", type='password', placeholder="4자리 이상으로 입력해 주세요.")
        br
        input(type="submit", name="submit").btn-primary