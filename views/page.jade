extends layout

block content
    if changesUrl
      div.alert.alert-info
        span Something changed since your last visit, #{lastVisitDate}.#{' '}
        a(href=changesUrl) Click here
        span #{' '}to see the difference.

    div.page-header
      h1= title

    div.row.pull-right
      div.span3
        a(href="?action=edit").btn.btn-primary Edit
        a(href='/wikis/note/new').btn New
        a(href="?action=history").btn History
      div.span1
        form(method="post", action="/wikis/note/delete/"+title)
          input(type="submit", value="delete", name="submit").btn

    div.row
      div.span12
        != content