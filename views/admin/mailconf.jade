extends ../layout

block content
  div.row-fluid
      div.span5
          form(method="post", action="/admin/mailconf", id="mailForm").form-horizontal
            fieldset

              h3= messages.title

              div.control-group
                label(name="from", for="from").control-label= messages.from
                div.controls
                  input(name="from", id="from", class="required email", value=options.from, placeholder="yourname@mail.com").input-xlarge

              div.control-group.warning
                label(name="password").control-label= messages.password
                div.controls
                  input(name="password", id="password", type="password").input-xlarge
                  span(id="password-warning").help-inline= messages.passwordWarning


              div(id="auto-config-alert", style="display: none").alert.alert-success
                span(id="using-wellknown-service-message")
                span(id="detailed-toggle-message")
                a(href="#", id="detailed-toggle-link", data-toggle="collapse", data-target="#detailed")

              div(id="detailed").in
                div.control-group
                  label(name="host").control-label= messages.host
                  div.controls
                    input(name="host", id="host", value=options.host, placeholder=messages.hostExample).input-xlarge
                div.control-group
                  label(name="port").control-label= messages.port
                  div.controls
                    input(name="port", id="port", value=options.port, placeholder=messages.portExample).input-xlarge
                div.control-group
                  label(name="username").control-label= messages.username
                  div.controls
                    input(name="username", id="username", value=options.username, placeholder=messages.usernameExample).input-xlarge
                div.control-group
                  label(name="ssl").control-label= messages.ssl
                  div.controls
                    input(name="ssl", id="ssl", checked=options.ssl, type="checkbox").input-xlarge

                div.control-group
                  label(name="tls").control-label= messages.tls
                  div.controls
                    input(name="tls", id="tls", checked=options.tls, type="checkbox").input-xlarge

                div.control-group
                  label(name="authMethod").control-label= messages.authMethod
                  div.controls
                    input(name="authMethod", id="authMethod", value=options.authMethod, placeholder=messages.authMethodExample).input-xlarge

              div.form-actions
                button(type="submit").btn.btn-primary= messages.save
                button.btn= messages.cancel

  script(type="text/javascript", src="http://cdnjs.cloudflare.com/ajax/libs/jquery/1.7.2/jquery.min.js")
  script(type="text/javascript", src="/bootstrap/js/bootstrap.js")
  script(type="text/javascript", src="/scripts/sprintf.js")
  script(type="text/javascript", src="/scripts/i18n.js")
  script(type="text/javascript", src="/scripts/mail.js")
