link(rel='stylesheet', href='/stylesheets/diff.css')

h1= name

div(class="diff")!= diff

ul
  li
    a(href="/wikis/note/pages/" + name)= __('View')
  li
    a(href="/wikis/note/pages/" + name + "?action=edit")= __('Edit')
  li
    a(href="/wikis/note/pages/" + name + "?action=history")= __('History')
form(method="post", action="/wikis/note/pages/" + name)
  input(type="hidden", name="_method", id='_method', value="delete")
  input(type="submit", value=__('Delete'), name="submit")
