h1= title
form(method="post", action="/wikis/note/pages")
    label(name="name") title
    input(name="name", value=name)
    br
    label(name="body") body
    textarea(id="body", name="body")= content
    br
    input(type="submit", name="submit")

ul
  li
    a(href="/wikis/note/pages/"+name) View
  li
    a(href="/wikis/note/edit/"+name) Edit
  li
    a(href="/wikis/note/history/"+name) History
form(method="post", action="/wikis/note/delete/"+title)
    input(type="submit", value="delete", name="submit")

div(id="preview")

script(type="text/javascript", src="/scripts/preview.js")
